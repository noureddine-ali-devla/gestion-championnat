<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- Connexion à la base de données -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/basket_championnat?createDatabaseIfNotExist=true&amp;useSSL=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <!-- Dialecte SQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Génération automatique des tables -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Logs SQL -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Gestion du contexte de session -->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- Classes annotées -->
        <mapping class="model.Equipe"/>
        <mapping class="model.Joueur"/>
        <mapping class="model.Match"/>
        <mapping class="model.Statistique"/>

    </session-factory>
</hibernate-configuration>
